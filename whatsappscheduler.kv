#:kivy 2.0.0

<WhatsAppScheduler>:
    phone_input: phone_input
    message_input: message_input
    time_input: time_input
    status_label: status_label

    orientation: 'vertical'
    padding: '20dp'
    spacing: '10dp'

    canvas.before:
        Color:
            rgba: 0.9, 0.9, 0.9, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: '60dp'
        
        Label:
            text: 'WhatsApp Scheduler'
            font_size: '24dp'
            color: 0.1, 0.5, 0.1, 1
            size_hint_y: None
            height: '60dp'

    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'
        padding: '10dp'
        
        TextInput:
            id: phone_input
            hint_text: 'Phone Number (e.g., +1234567890)'
            multiline: False
            size_hint_y: None
            height: '40dp'
            
        TextInput:
            id: message_input
            hint_text: 'Message'
            multiline: True
            size_hint_y: None
            height: '80dp'
            
        TextInput:
            id: time_input
            hint_text: 'Time (HH:MM in 24-hour format)'
            multiline: False
            size_hint_y: None
            height: '40dp'
            
        Button:
            text: 'Schedule Message'
            size_hint_y: None
            height: '50dp'
            background_color: 0.1, 0.5, 0.1, 1
            on_press: root.schedule_message()
            
        Label:
            id: status_label
            text: ''
            color: 0.1, 0.5, 0.1, 1
            size_hint_y: None
            height: '40dp'
